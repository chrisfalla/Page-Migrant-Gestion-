---
import { Image } from 'astro:assets';
import logoImage from '../assets/img/logoMigran.png';

interface Props {
  isLegalPage?: boolean;
}

const { isLegalPage = false } = Astro.props;
const baseUrl = isLegalPage ? '/' : '';
---

<header class="sticky top-0 z-50 backdrop-blur-xl bg-white/90 border-b border-gray-100 shadow-sm transition-all duration-300">
  <div class="container mx-auto px-2 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 transition-transform hover:scale-105 duration-300">
      <Image 
        src={logoImage} 
        alt="Migrant GestiÃ³n Logo" 
        class="h-12 w-auto object-contain" 
        loading="eager"
      />
    </a>

    <nav class="hidden md:flex items-center gap-1">
      <a href={`${baseUrl}#servicios`} class="nav-link">Servicios</a>
      <a href={`${baseUrl}#testimonios`} class="nav-link">Testimonios</a>
      <a href={`${baseUrl}#propuesta`} class="nav-link">Propuesta</a>
      <a href={`${baseUrl}#contacto`} class="nav-link nav-link--highlight">Contacto</a>
    </nav>
    
    <!-- Mobile menu button placeholder (optional for future) -->
  </div>
</header>

<style>
  .nav-link {
    padding: 0.5rem 1rem;
    font-size: 0.95rem;
    font-weight: 500;
    color: #4b5563;
    border-radius: 8px;
    transition: all 0.2s ease-in-out;
  }

  .nav-link:hover {
    color: #001B48;
    background-color: #f3f4f6;
  }

  .nav-link--highlight {
    color: #001B48;
    font-weight: 600;
  }
  
  .nav-link--highlight:hover {
    background-color: #e0e7ff;
    color: #001B48;
  }
</style>
