---
import Button from './Button.astro';
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-white/80 border-b border-[#8E8E8E]/30">
  <div class="container mx-auto px-6 py-4 flex items-center justify-between">
    <a href="#hero" class="text-lg font-bold text-[#000000] tracking-wide">
      MIGRANT <span class="text-[#001B48]">GESTIÓN</span>
    </a>

    <nav class="hidden md:flex items-center gap-8 text-sm text-[#8E8E8E]">
      <a href="#servicios" class="hover:text-[#000000] transition-colors">Servicios</a>
      <a href="#testimonios" class="hover:text-[#000000] transition-colors">Testimonios</a>
      <a href="#propuesta" class="hover:text-[#000000] transition-colors">Propuesta</a>
      <a href="#contacto" class="hover:text-[#000000] transition-colors">Contacto</a>
    </nav>

    <div class="hidden md:block">
      <Button variant="primary" size="sm" href="#contacto">
        Iniciar Trámite
      </Button>
    </div>

    <a href="#contacto" class="md:hidden text-sm font-semibold text-[#001B48]">Iniciar</a>
  </div>
</header>
