---
// Sección de Pruebas/Casos de Éxito de nuestros servicios
import { Image } from 'astro:assets';
import visaImage from '../assets/img/visa-application-composition-with-europe-america-flag.jpg';
import travelersImage from '../assets/img/two-travelers-holding-passports-airport.jpg';
import handshakeImage from '../assets/img/business-people-shaking-hands-together.jpg';

const cases = [
  {
    type: 'Visa de Trabajo (V)',
    name: 'Ronny Hernández',
    country: 'Venezuela',
    desc: 'Obtuvo su visa de trabajo para desempeñarse como ingeniero de sistemas en una empresa multinacional en Bogotá.',
    days: '35 días',
    count: '1 trámite',
    image: visaImage
  },
  {
    type: 'PPT + Afiliación Salud',
    name: 'Alejandra Rivas',
    country: 'Venezuela',
    desc: 'Regularizó su estatus migratorio con PPT y se afilió al sistema de salud para acceder a servicios médicos de calidad.',
    days: '28 días',
    count: '2 trámites',
    image: travelersImage
  },
  {
    type: 'Cédula de Extranjería',
    name: 'Carlos Peña',
    country: 'Venezuela',
    desc: 'Después de 2 años en Colombia, logró obtener su cédula de extranjería para acceder a trámites y servicios sin restricciones.',
    days: '22 días',
    count: '1 trámite',
    image: handshakeImage
  }
];
---

<section id="casos" class="proof-section reveal">
  <div class="proof-container">
    
    <!-- Header -->
    <div class="proof-header">
      <span class="proof-badge">Casos de Éxito</span>
      <h2 class="proof-title">
        Resultados que <span class="text-accent">hablan por sí solos</span>
      </h2>
      <p class="proof-subtitle">
        Cada caso representa una persona que logró regularizar su estatus migratorio con nuestra ayuda.
      </p>
    </div>

    <!-- Estadísticas grandes -->
    <div class="proof-stats">
      <div class="stat-item">
        <div class="stat-number">100+</div>
        <div class="stat-label">Visas aprobadas</div>
        <div class="stat-bar">
          <div class="stat-bar-fill" style="--fill-width: 95%;"></div>
        </div>
      </div>
      <div class="stat-item">
        <div class="stat-number">50+</div>
        <div class="stat-label">PPT tramitados</div>
        <div class="stat-bar">
          <div class="stat-bar-fill" style="--fill-width: 88%;"></div>
        </div>
      </div>
      <div class="stat-item">
        <div class="stat-number">30+</div>
        <div class="stat-label">Empresas creadas</div>
        <div class="stat-bar">
          <div class="stat-bar-fill" style="--fill-width: 75%;"></div>
        </div>
      </div>
      <div class="stat-item">
        <div class="stat-number">98%</div>
        <div class="stat-label">Tasa de éxito</div>
        <div class="stat-bar">
          <div class="stat-bar-fill stat-bar-fill--accent" style="--fill-width: 98%;"></div>
        </div>
      </div>
    </div>

    <!-- Grid de casos -->
    <div class="cases-grid">
      {cases.map((item) => (
        <article class="case-card">
            <div class="case-image-wrapper">
              <Image 
                src={item.image} 
                alt={item.name} 
                class="case-image"
                loading="lazy"
                decoding="async"
                width={360}
                height={225}
                quality={60}
                format="webp"
                widths={[280, 360]}
                sizes="(min-width: 1024px) 33vw, (min-width: 640px) 50vw, 100vw"
              />
              <div class="case-badge case-badge--success">Exitoso</div>
            </div>
            <div class="case-content">
              <div class="case-type">{item.type}</div>
              <h3 class="case-title">{item.name} - {item.country}</h3>
              <p class="case-desc">{item.desc}</p>
              <div class="case-meta">
                <span class="meta-item">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10" />
                    <path d="M12 6v6l4 2" />
                  </svg>
                  {item.days}
                </span>
                <span class="meta-item">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="m9 12 2 2 4-4" />
                    <circle cx="12" cy="12" r="10" />
                  </svg>
                  {item.count}
                </span>
              </div>
            </div>
          </article>
        ))}
    </div>

    <!-- CTA -->
    <div class="proof-cta">
      <p class="cta-text">
        <strong>¿Quieres ser nuestro próximo caso de éxito?</strong><br/>
        Agenda tu consulta gratuita y cuéntanos tu situación.
      </p>
      <a href="#contacto" class="cta-button">
        Agenda tu Consulta
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7" />
        </svg>
      </a>
    </div>

  </div>
</section>

<style>
  .proof-section {
    padding: clamp(2.5rem, 5vw, 4.5rem) clamp(1.25rem, 5vw, 4rem) 2rem;
    background: var(--color-primary);
    color: var(--color-white);
  }

  .proof-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .proof-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .proof-badge {
    display: inline-flex;
    padding: var(--space-2) var(--space-4);
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-white);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-5);
  }

  .proof-title {
    font-size: clamp(var(--text-3xl), 4vw, var(--text-4xl));
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-4);
  }

  .text-accent {
    color: #60a5fa;
  }

  .proof-subtitle {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.75);
    line-height: var(--leading-relaxed);
  }

  .proof-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 3.5rem;
  }

  .stat-item {
    text-align: center;
    padding: var(--space-6);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .stat-number {
    font-size: var(--text-4xl);
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    line-height: var(--leading-none);
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1rem;
  }

  .stat-bar {
    height: 6px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-sm);
    overflow: hidden;
  }

  .stat-bar-fill {
    height: 100%;
    width: var(--fill-width);
    background: linear-gradient(90deg, var(--color-accent-light) 0%, var(--color-accent) 100%);
    border-radius: var(--radius-sm);
    transition: width 1s ease;
  }

  .stat-bar-fill--accent {
    background: linear-gradient(90deg, var(--color-success) 0%, #059669 100%);
  }

  .proof-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .cases-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 640px) {
    .cases-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .cases-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .case-card {
    background: var(--color-white);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    color: var(--color-black);
    transition: transform var(--transition-slow) ease, box-shadow var(--transition-slow) ease;
    box-shadow: var(--shadow-xl);
  }

  .case-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-2xl);
  }

  .case-image-wrapper {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .case-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
    box-shadow: var(--shadow-lg);
  }

  .case-card:hover .case-image {
    transform: scale(1.05);
  }

  .case-badge {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    border-radius: var(--radius-md);
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .case-badge--success {
    background: var(--color-success);
    color: var(--color-white);
  }

  .case-content {
    padding: var(--space-6);
  }

  .case-type {
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.03em;
    margin-bottom: 0.5rem;
  }

  .case-title {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-black);
    margin-bottom: var(--space-3);
  }

  .case-desc {
    font-size: var(--text-sm);
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .case-meta {
    display: flex;
    gap: 1rem;
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  .meta-item svg {
    width: 16px;
    height: 16px;
  }

  .proof-cta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-8);
    padding: var(--space-8) var(--space-10);
    background: rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-2xl);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .cta-text {
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.5;
  }

  .cta-text strong {
    color: #ffffff;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    background: var(--color-white);
    color: var(--color-primary);
    font-weight: var(--font-bold);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: transform var(--transition-base) ease, box-shadow var(--transition-base) ease;
    white-space: nowrap;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
  }

  .cta-button svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 1024px) {
    .proof-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .proof-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .proof-grid > :nth-child(3) {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .proof-cta {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 640px) {
    .proof-stats {
      grid-template-columns: 1fr;
    }

    .proof-grid {
      grid-template-columns: 1fr;
    }

    .proof-grid > :nth-child(3) {
      grid-column: span 1;
    }
  }
</style>
