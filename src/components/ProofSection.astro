          <path d="M5 12h14M12 5l7 7-7 7" />
        </svg>
      </a>
    </div>

  </div>
</section>

<style>
  .proof-section {
    padding: clamp(2.5rem, 5vw, 4.5rem) clamp(1.25rem, 5vw, 4rem) 2rem;
    background: #001b48;
    color: #ffffff;
  }

  .proof-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .proof-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .proof-badge {
    display: inline-flex;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 999px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.25rem;
  }

  .proof-title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    color: #ffffff;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .text-accent {
    color: #60a5fa;
  }

  .proof-subtitle {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.6;
  }

  .proof-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 3.5rem;
  }

  .stat-item {
    text-align: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: #ffffff;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1rem;
  }

  .stat-bar {
    height: 6px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 3px;
    overflow: hidden;
  }

  .stat-bar-fill {
    height: 100%;
    width: var(--fill-width);
    background: linear-gradient(90deg, #60a5fa 0%, #3b82f6 100%);
    border-radius: 3px;
    transition: width 1s ease;
  }

  .stat-bar-fill--accent {
    background: linear-gradient(90deg, #10b981 0%, #059669 100%);
  }

  .proof-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .cases-carousel-container {
    padding: 1.5rem 0;
    margin: -1.5rem 0 3rem 0;
  }

  .cases-carousel-track {
    padding: 0.5rem;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .cases-carousel-track::-webkit-scrollbar {
    display: none;
  }

  .case-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    color: #000000;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
  }

  .case-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.2);
  }

  .case-image-wrapper {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .case-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .case-card:hover .case-image {
    transform: scale(1.05);
  }

  .case-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    padding: 0.35rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 6px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .case-badge--success {
    background: #10b981;
    color: #ffffff;
  }

  .case-content {
    padding: 1.5rem;
  }

  .case-type {
    font-size: 0.8rem;
    font-weight: 600;
    color: #001b48;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    margin-bottom: 0.5rem;
  }

  .case-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #000000;
    margin-bottom: 0.75rem;
  }

  .case-desc {
    font-size: 0.9rem;
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .case-meta {
    display: flex;
    gap: 1rem;
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.85rem;
    color: #8e8e8e;
  }

  .meta-item svg {
    width: 16px;
    height: 16px;
  }

  .proof-cta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding: 2rem 2.5rem;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .cta-text {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.5;
  }

  .cta-text strong {
    color: #ffffff;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.75rem;
    background: #ffffff;
    color: #001b48;
    font-weight: 700;
    border-radius: 12px;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    white-space: nowrap;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
  }

  .cta-button svg {
    width: 20px;
    height: 20px;
  }

  .carousel-controls {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 8rem;
    margin-top: 1rem;
  }

  .carousel-prev-btn,
  .carousel-next-btn {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.6s cubic-bezier(0.4,0,0.2,1);
  }

  .carousel-prev-btn:hover,
  .carousel-next-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    transform: scale(1.05);
  }

  .carousel-prev-btn svg,
  .carousel-next-btn svg {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 1024px) {
    .proof-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .proof-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .proof-grid > :nth-child(3) {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .proof-cta {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 640px) {
    .proof-stats {
      grid-template-columns: 1fr;
    }

    .proof-grid {
      grid-template-columns: 1fr;
    }

    .proof-grid > :nth-child(3) {
      grid-column: span 1;
    }
  }
</style>

<script>
  const initCasesCarousel = () => {
    const section = document.getElementById('casos');
    if (!section) return;
    
    const track = section.querySelector('.cases-carousel-track') as HTMLElement;
    const prevBtn = section.querySelector('.carousel-prev-btn') as HTMLElement;
    const nextBtn = section.querySelector('.carousel-next-btn') as HTMLElement;
    
    if (!track || !prevBtn || !nextBtn) return;

    let autoplayInterval: number;
    let isUserInteracting = false;

    const scrollByCard = (direction: number) => {
      const card = track.querySelector('article');
      if (!card) return;
      const cardWidth = card.getBoundingClientRect().width;
      const gap = 24; // gap-6 = 1.5rem = 24px
      const offset = cardWidth + gap;
      const maxScroll = track.scrollWidth - track.clientWidth;
      
      if (direction > 0 && track.scrollLeft >= maxScroll - 10) {
        track.scrollTo({ left: 0, behavior: 'smooth' });
      } else {
        track.scrollBy({ left: direction * offset, behavior: 'smooth' });
      }
    };

    const startAutoplay = () => {
      autoplayInterval = window.setInterval(() => {
        if (!isUserInteracting) {
          scrollByCard(1);
        }
      }, 5000); // Cambia cada 5 segundos
    };

    const stopAutoplay = () => {
      clearInterval(autoplayInterval);
    };

    const resetAutoplay = () => {
      stopAutoplay();
      startAutoplay();
    };

    nextBtn.addEventListener('click', () => {
      scrollByCard(1);
      resetAutoplay();
    });

    prevBtn.addEventListener('click', () => {
      scrollByCard(-1);
      resetAutoplay();
    });

    // Pausar autoplay al hacer hover
    section.addEventListener('mouseenter', () => {
      isUserInteracting = true;
    });

    section.addEventListener('mouseleave', () => {
      isUserInteracting = false;
    });

    // Pausar autoplay al hacer scroll manual
    track.addEventListener('scroll', () => {
      isUserInteracting = true;
      setTimeout(() => {
        isUserInteracting = false;
      }, 2000);
    });

    // Iniciar autoplay
    startAutoplay();
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCasesCarousel);
  } else {
    initCasesCarousel();
  }
</script>
