---
interface Props {
  title: string;
  description: string;
  services: string[];
  icon?: 'passport' | 'briefcase' | 'scale' | 'academic' | 'sparkles';
  size?: 'normal' | 'large';
  class?: string;
}

const { 
  title, 
  description, 
  services,
  icon = 'passport',
  size = 'normal',
  class: className = ''
} = Astro.props;

const sizeClasses = size === 'large' 
  ? 'md:col-span-2 md:row-span-2' 
  : '';
---

<div class={`group relative bg-white rounded-2xl p-8 border border-[#8E8E8E]/40 transition-all duration-700 ease-out hover:-translate-y-2.5 hover:shadow-[0_20px_40px_rgba(0,27,72,0.1)] reveal ${sizeClasses} ${className}`}>
  <!-- Icono decorativo -->
  <div class="absolute top-8 right-8 opacity-10 group-hover:opacity-20 transition-opacity duration-700 ease-out">
    {icon === 'passport' && (
      <svg class="w-16 h-16 text-[#001B48]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 3h8a2 2 0 012 2v14a2 2 0 01-2 2H8a2 2 0 01-2-2V5a2 2 0 012-2zm0 5h8m-8 4h8m-8 4h5" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2a1 1 0 001 1h4a1 1 0 001-1V3" />
      </svg>
    )}
    {icon === 'briefcase' && (
      <svg class="w-16 h-16 text-[#001B48]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2" />
        <rect x="3" y="7" width="18" height="12" rx="2" ry="2" stroke-width="1.5" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12h18" />
      </svg>
    )}
    {icon === 'scale' && (
      <svg class="w-16 h-16 text-[#001B48]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v18" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 7h14" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7l-3 5a3 3 0 006 0l-3-5zm10 0l-3 5a3 3 0 006 0l-3-5z" />
      </svg>
    )}
    {icon === 'academic' && (
      <svg class="w-16 h-16 text-[#001B48]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3l9 5-9 5-9-5 9-5z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 10v5a6 6 0 0012 0v-5" />
      </svg>
    )}
    {icon === 'sparkles' && (
      <svg class="w-16 h-16 text-[#001B48]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3l1.5 3L10 7l-3 1L5 11 3 8 0 7l3.5-1L5 3z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 13l1.5 3L24 17l-3 1-1 3-1-3-3-1 3.5-1L19 13z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8l2 4 4 2-4 2-2 4-2-4-4-2 4-2 2-4z" />
      </svg>
    )}
  </div>
  
  <!-- Contenido -->
  <div class="relative z-10">
    <!-- Badge con efecto -->
    <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-[#001B48]/5 group-hover:bg-[#001B48] transition-colors duration-700 ease-out mb-6">
      {icon === 'passport' && (
        <svg class="w-6 h-6 text-[#001B48] group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M8 3h8a2 2 0 012 2v14a2 2 0 01-2 2H8a2 2 0 01-2-2V5a2 2 0 012-2zm0 5h8m-8 4h8m-8 4h5" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M9 3v2a1 1 0 001 1h4a1 1 0 001-1V3" />
        </svg>
      )}
      {icon === 'briefcase' && (
        <svg class="w-6 h-6 text-[#001B48] group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2" />
          <rect x="3" y="7" width="18" height="12" rx="2" ry="2" stroke-width="1.8" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M3 12h18" />
        </svg>
      )}
      {icon === 'scale' && (
        <svg class="w-6 h-6 text-[#001B48] group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M12 3v18" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M5 7h14" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M7 7l-3 5a3 3 0 006 0l-3-5zm10 0l-3 5a3 3 0 006 0l-3-5z" />
        </svg>
      )}
      {icon === 'academic' && (
        <svg class="w-6 h-6 text-[#001B48] group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M12 3l9 5-9 5-9-5 9-5z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M6 10v5a6 6 0 0012 0v-5" />
        </svg>
      )}
      {icon === 'sparkles' && (
        <svg class="w-6 h-6 text-[#001B48] group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M5 3l1.5 3L10 7l-3 1L5 11 3 8 0 7l3.5-1L5 3z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M19 13l1.5 3L24 17l-3 1-1 3-1-3-3-1 3.5-1L19 13z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M12 8l2 4 4 2-4 2-2 4-2-4-4-2 4-2 2-4z" />
        </svg>
      )}
    </div>
    
    <!-- Título -->
    <h3 class="text-2xl md:text-3xl font-bold text-[#000000] mb-4 group-hover:text-[#001B48] transition-colors">
      {title}
    </h3>
    
    <!-- Descripción -->
    <p class="text-[#8E8E8E] text-base mb-6 leading-relaxed">
      {description}
    </p>
    
    <!-- Lista de servicios -->
    <ul class="space-y-2">
      {services.map((service) => (
        <li class="flex items-start gap-2 text-sm text-[#8E8E8E]">
          <svg class="w-5 h-5 text-[#001B48] flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>{service}</span>
        </li>
      ))}
    </ul>
    
    <!-- Línea decorativa -->
    <div class="mt-6 h-1 w-0 group-hover:w-full bg-gradient-to-r from-[#001B48] to-transparent transition-all duration-500"></div>
  </div>
</div>
