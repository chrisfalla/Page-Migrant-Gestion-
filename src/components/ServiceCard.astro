---
interface Props {
  title: string;
  description: string;
  services: string[];
  icon?: string;
  size?: 'normal' | 'large';
  class?: string;
}

const { 
  title, 
  description, 
  services,
  icon = 'ðŸ“‹',
  size = 'normal',
  class: className = ''
} = Astro.props;

const sizeClasses = size === 'large' 
  ? 'md:col-span-2 md:row-span-2' 
  : '';
---

<div class={`group relative bg-white rounded-2xl p-8 border border-gray-100 hover:border-[#003399] transition-all duration-500 hover:shadow-2xl hover:shadow-[#003399]/10 ${sizeClasses} ${className}`}>
  <!-- Icono decorativo -->
  <div class="absolute top-8 right-8 text-6xl opacity-5 group-hover:opacity-10 transition-opacity">
    {icon}
  </div>
  
  <!-- Contenido -->
  <div class="relative z-10">
    <!-- Badge con efecto -->
    <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-[#003399]/5 group-hover:bg-[#003399] transition-colors duration-300 mb-6">
      <span class="text-2xl group-hover:scale-110 transition-transform">{icon}</span>
    </div>
    
    <!-- TÃ­tulo -->
    <h3 class="text-2xl md:text-3xl font-bold text-[#000000] mb-4 group-hover:text-[#003399] transition-colors">
      {title}
    </h3>
    
    <!-- DescripciÃ³n -->
    <p class="text-[#6e6e6e] text-base mb-6 leading-relaxed">
      {description}
    </p>
    
    <!-- Lista de servicios -->
    <ul class="space-y-2">
      {services.map((service) => (
        <li class="flex items-start gap-2 text-sm text-[#6e6e6e]">
          <svg class="w-5 h-5 text-[#003399] flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>{service}</span>
        </li>
      ))}
    </ul>
    
    <!-- LÃ­nea decorativa -->
    <div class="mt-6 h-1 w-0 group-hover:w-full bg-gradient-to-r from-[#003399] to-transparent transition-all duration-500"></div>
  </div>
</div>
