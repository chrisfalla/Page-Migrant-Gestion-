          <p class="member-bio-short">
            
          </p>
        </div>
      </div>

    </div>

  </div>
</section>

<style>
  .team-section {
    padding: 0rem clamp(1.25rem, 5vw, 4rem) clamp(2.5rem, 5vw, 4.5rem);
    background: #f8fafc;
  }

  .team-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .team-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .team-badge {
    display: inline-flex;
    padding: 0.5rem 1rem;
    background: rgba(0, 27, 72, 0.08);
    color: #001b48;
    border-radius: 999px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.25rem;
  }

  .team-title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    color: #000000;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .text-accent {
    color: #001b48;
  }

  .team-subtitle {
    font-size: 1.1rem;
    color: #8e8e8e;
    line-height: 1.6;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .team-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.06);
    transition: transform 0.5s cubic-bezier(0.4,0,0.2,1), box-shadow 0.5s cubic-bezier(0.4,0,0.2,1);
  }

  .team-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.08);
  }

  .team-card--featured {
    grid-column: span 2;
    display: grid;
    grid-template-columns: 200px 1fr;
  }

  .member-image-wrapper {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .team-card--featured .member-image-wrapper {
    aspect-ratio: auto;
    height: 100%;
  }

  .member-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .member-image--placeholder {
    background: linear-gradient(135deg, #001b48 0%, #003366 100%);
    display: grid;
    place-items: center;
  }

  .member-image--placeholder svg {
    width: 48px;
    height: 48px;
    color: rgba(255, 255, 255, 0.6);
  }

  .team-card--featured .member-image--placeholder svg {
    width: 64px;
    height: 64px;
  }

  .member-badge {
    position: absolute;
    bottom: 0.75rem;
    left: 0.75rem;
    padding: 0.35rem 0.75rem;
    background: rgba(255, 255, 255, 0.95);
    color: #001b48;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 6px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .member-info {
    padding: 1.5rem;
  }

  .team-card--featured .member-info {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .member-name {
    font-size: 1.15rem;
    font-weight: 700;
    color: #000000;
    margin-bottom: 0.25rem;
  }

  .team-card--featured .member-name {
    font-size: 1.35rem;
  }

  .member-role {
    font-size: 0.9rem;
    color: #001b48;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .member-bio {
    font-size: 0.95rem;
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .member-bio-short {
    font-size: 0.9rem;
    color: #6b7280;
    line-height: 1.5;
  }

  .member-social {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: grid;
    place-items: center;
    transition: transform 0.5s cubic-bezier(0.4,0,0.2,1), background 0.5s cubic-bezier(0.4,0,0.2,1);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .social-link--whatsapp {
    background: rgba(37, 211, 102, 0.1);
    color: #25D366;
  }

  .social-link--whatsapp:hover {
    background: #25D366;
    color: #ffffff;
    transform: translateY(-2px);
  }

  .social-link--email {
    background: rgba(0, 27, 72, 0.08);
    color: #001b48;
  }

  .social-link--email:hover {
    background: #001b48;
    color: #ffffff;
    transform: translateY(-2px);
  }

  .team-message {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: linear-gradient(135deg, #001b48 0%, #003366 100%);
    border-radius: 20px;
    color: #ffffff;
  }

  .message-icon {
    width: 56px;
    height: 56px;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.15);
    display: grid;
    place-items: center;
    flex-shrink: 0;
  }

  .message-icon svg {
    width: 28px;
    height: 28px;
  }

  .message-content h3 {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #ffffff;
  }

  .message-content p {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.5;
  }

  .message-content a {
    color: #ffffff;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .message-content a:hover {
    text-decoration: none;
  }

  @media (max-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .team-card--featured {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .team-card--featured {
      grid-template-columns: 1fr;
    }

    .team-card--featured .member-image-wrapper {
      aspect-ratio: 16 / 9;
    }
  }

  @media (max-width: 640px) {
    .team-grid {
      grid-template-columns: 1fr;
    }

    .team-card--featured {
      grid-column: span 1;
    }

    .team-message {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
