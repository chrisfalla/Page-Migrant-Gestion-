<style>
  .team-section {
    padding: 0rem clamp(1.25rem, 5vw, 4rem) clamp(1rem, 3vw, 1.5rem);
    background: var(--color-gray-50);
  }

  .team-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .team-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .team-badge {
    display: inline-flex;
    padding: var(--space-2) var(--space-4);
    background: rgba(0, 27, 72, 0.08);
    color: var(--color-primary);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-5);
  }

  .team-title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: var(--font-extrabold);
    color: var(--color-black);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-4);
  }

  .text-accent {
    color: var(--color-primary);
  }

  .team-subtitle {
    font-size: var(--text-lg);
    color: var(--color-gray-500);
    line-height: var(--leading-relaxed);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .team-card {
    background: var(--color-white);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.06);
  }
  .member-image-wrapper:hover .member-image {
    transform: scale(1.045);
    transition: transform 0.35s var(--ease-in-out);
  }

  .member-image {
    /* ...existing code... */
    transition: transform 0.35s var(--ease-in-out);
  }

  .member-image-wrapper {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-primary-light) 100%
    );
    box-shadow: 0 0 44px 8px var(--color-white);
  }

  .member-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center center;
    filter: drop-shadow(0 0 0.7rem rgba(255, 255, 255, 0.25))
      drop-shadow(0 0 1.8rem rgba(255, 255, 255, 0.1852));
  }
  img[alt="Juan Barrios - Asesor Migratorio"] {
    object-fit: contain;
    filter: brightness(0.7) drop-shadow(0 0 0.7rem rgba(255, 255, 255, 0.25))
      drop-shadow(0 0 1.8rem rgba(255, 255, 255, 0.1852));
  }

  img[alt="Alexis Cedeño - Gerente General de Migrant Gestión"] {
    object-position: center 100%;
  }
  
  img[alt="Juan Narvaez - Asesor Migratorio"] {
    object-fit: contain;
  }

  .member-image--placeholder {
    background: linear-gradient(135deg, #001b48 0%, #003366 100%);
    display: grid;
    place-items: center;
  }

  .member-image--placeholder svg {
    width: 48px;
    height: 48px;
    color: rgba(255, 255, 255, 0.6);
  }

  .team-card--featured .member-image--placeholder svg {
    width: 64px;
    height: 64px;
  }

  .member-badge {
    position: absolute;
    bottom: var(--space-3);
    left: var(--space-3);
    padding: var(--space-1) var(--space-3);
    background: rgba(255, 255, 255, 0.95);
    color: var(--color-primary);
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    border-radius: var(--radius-md);
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .member-info {
    padding: 1.5rem;
  }

  .member-name {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-black);
    margin-bottom: var(--space-1);
  }

  .member-role {
    font-size: var(--text-sm);
    color: var(--color-primary);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-3);
  }

  .member-bio-short {
    font-size: 0.9rem;
    color: #6b7280;
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .member-social {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-lg);
    display: grid;
    place-items: center;
    transition:
      transform var(--transition-slow) var(--ease-in-out),
      background var(--transition-slow) var(--ease-in-out);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .social-link--whatsapp {
    background: rgba(37, 211, 102, 0.1);
    color: #25d366;
  }

  .social-link--whatsapp:hover {
    background: #25d366;
    color: #ffffff;
    transform: translateY(-2px);
  }

  .social-link--email {
    background: rgba(0, 27, 72, 0.08);
    color: var(--color-primary);
  }

  .social-link--email:hover {
    background: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-2px);
  }

  .team-message {
    display: flex;
    align-items: center;
    gap: var(--space-6);
    padding: var(--space-8);
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-primary-light) 100%
    );
    border-radius: var(--radius-2xl);
    color: var(--color-white);
  }

  .message-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-xl);
    background: rgba(255, 255, 255, 0.15);
    display: grid;
    place-items: center;
    flex-shrink: 0;
  }

  .message-icon svg {
    width: 28px;
    height: 28px;
  }

  .message-content h3 {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #ffffff;
  }

  .message-content p {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.5;
  }

  .message-content a {
    color: #ffffff;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .message-content a:hover {
    text-decoration: none;
  }

  @media (max-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .team-card--featured {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .team-card--featured {
      grid-template-columns: 1fr;
    }

    .team-card--featured .member-image-wrapper {
      aspect-ratio: 16 / 9;
    }
  }

  @media (max-width: 640px) {
    .team-grid {
      grid-template-columns: 1fr;
    }

    .team-card--featured {
      grid-column: span 1;
    }

    .team-message {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
