---
// Trust Bar - Sección de confianza
---

<section class="trust-bar reveal">
  <div class="trust-bar__pattern" aria-hidden="true"></div>
  
  <div class="trust-bar__container">
    <div class="trust-bar__grid">
      
      <!-- Sede -->
      <div class="trust-item">
        <div class="trust-item__icon">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
          </svg>
        </div>
        <div class="trust-item__content">
          <span class="trust-item__label">Ubicación</span>
          <span class="trust-item__value">Neiva, Huila</span>
        </div>
      </div>
      
      <!-- Alcance -->
      <div class="trust-item">
        <div class="trust-item__icon">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
          </svg>
        </div>
        <div class="trust-item__content">
          <span class="trust-item__label">Cobertura</span>
          <span class="trust-item__value">Nacional e Internacional</span>
        </div>
      </div>
      
      <!-- Experiencia -->
      <div class="trust-item">
        <div class="trust-item__icon">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm2-7h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
          </svg>
        </div>
        <div class="trust-item__content">
          <span class="trust-item__label">Desde</span>
          <span class="trust-item__value">2020 — 5 Años</span>
        </div>
      </div>
      
    </div>
  </div>
</section>

<style>
  .trust-bar {
    padding: var(--space-6) var(--space-4);
    background: var(--color-primary);
    color: var(--color-white);
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .trust-bar { padding-inline: var(--space-6); }
  }
  @media (min-width: 1024px) {
    .trust-bar { padding-inline: var(--space-8); }
  }

  .trust-bar__pattern {
    position: absolute;
    inset: 0;
    opacity: 0.04;
    background-image: linear-gradient(45deg, transparent 49%, white 49%, white 51%, transparent 51%);
    background-size: 20px 20px;
  }

  .trust-bar__container {
    max-width: var(--container-xl);
    margin-inline: auto;
    position: relative;
    z-index: 1;
  }

  .trust-bar__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    text-align: center;
  }

  @media (min-width: 768px) {
    .trust-bar__grid {
      grid-template-columns: repeat(3, 1fr);
      text-align: left;
    }
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  @media (min-width: 768px) {
    .trust-item {
      flex-direction: row;
      gap: var(--space-4);
    }
  }

  .trust-item__icon {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-xl);
    display: grid;
    place-items: center;
    flex-shrink: 0;
  }

  .trust-item__icon svg {
    width: 24px;
    height: 24px;
  }

  .trust-item__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .trust-item__label {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: var(--font-medium);
  }

  .trust-item__value {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
  }
</style>
