---
// Modal component that will be dynamically populated with service data via JavaScript
---

<dialog id="service-modal" class="service-modal">
  <div class="modal-content">
    <div class="modal-header">
      <div class="modal-icon" id="modal-icon">üìã</div>
      <h2 class="modal-title" id="modal-title">T√≠tulo del Servicio</h2>
      <button class="modal-close" id="modal-close" aria-label="Cerrar modal">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    
    <div class="modal-body">
      <div class="modal-section">
        <p class="modal-description" id="modal-description"></p>
      </div>

      <div class="modal-section" id="detailed-section">
        <h3 class="section-title">Descripci√≥n Completa</h3>
        <p class="section-content" id="modal-detailed-description"></p>
      </div>

      <div class="modal-section" id="requirements-section">
        <h3 class="section-title">Requisitos</h3>
        <ul class="section-list" id="modal-requirements"></ul>
      </div>

      <div class="modal-section" id="process-section">
        <h3 class="section-title">Proceso</h3>
        <ol class="section-list" id="modal-process"></ol>
      </div>

      <div class="modal-section" id="duration-section">
        <h3 class="section-title">Duraci√≥n Estimada</h3>
        <p class="duration-badge" id="modal-duration"></p>
      </div>
    </div>

    <div class="modal-footer">
      <a href="#contacto" class="modal-cta">
        Consultar ahora
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</dialog>

<style>
  .service-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
    border: none;
    border-radius: var(--radius-2xl, 1.25rem);
    padding: 0;
    max-width: 680px;
    width: calc(100vw - 2rem);
    max-height: 85vh;
    background: white;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    overflow: hidden;
  }

  .service-modal[open] {
    animation: modal-fade-in 0.25s var(--ease-out-expo, cubic-bezier(0.16, 1, 0.3, 1)) forwards;
  }

  .service-modal::backdrop {
    background: rgba(0, 0, 0, 0.6);
    animation: backdrop-fade-in 0.25s ease;
  }

  /* Backdrop-filter solo sin reduced-motion */
  @media (prefers-reduced-motion: no-preference) {
    .service-modal::backdrop {
      backdrop-filter: blur(4px);
    }
  }

  @keyframes modal-fade-in {
    from {
      opacity: 0;
      transform: translate(-50%, -50%) scale(0.96);
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }

  @keyframes backdrop-fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .modal-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    max-height: 85vh;
  }

  .modal-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 2rem;
    border-bottom: 1px solid #e5e7eb;
    background: linear-gradient(135deg, #f9fafb 0%, #ffffff 100%);
    flex-shrink: 0;
  }

  .modal-icon {
    font-size: var(--text-4xl);
    line-height: 1;
    flex-shrink: 0;
  }

  .modal-title {
    flex: 1;
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--color-primary, #001b48);
    margin: 0;
    line-height: 1.3;
  }

  .modal-close {
    flex-shrink: 0;
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
    color: #6b7280;
  }

  .modal-close:hover {
    background: #f3f4f6;
    border-color: var(--color-accent, #2563eb);
    color: var(--color-accent, #2563eb);
    transform: scale(1.05);
  }

  .modal-body {
    flex: 1;
    overflow-y: auto;
    padding: 2rem;
    /* Custom scrollbar */
    scrollbar-width: thin;
    scrollbar-color: #cbd5e1 #f1f5f9;
  }

  .modal-body::-webkit-scrollbar {
    width: 8px;
  }

  .modal-body::-webkit-scrollbar-track {
    background: #f1f5f9;
    border-radius: 4px;
  }

  .modal-body::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 4px;
  }

  .modal-body::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }

  .modal-section {
    margin-bottom: 2rem;
  }

  .modal-section:last-child {
    margin-bottom: 0;
  }

  .modal-description {
    font-size: var(--text-lg);
    line-height: 1.7;
    color: #374151;
    margin: 0;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--color-primary, #001b48);
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section-title::before {
    content: '';
    width: 4px;
    height: 1.25rem;
    background: linear-gradient(135deg, var(--color-primary, #001b48), var(--color-accent, #2563eb));
    border-radius: 2px;
  }

  .section-content {
    font-size: var(--text-base);
    line-height: 1.7;
    color: #4b5563;
    margin: 0;
  }

  .section-list {
    margin: 0;
    padding-left: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .section-list li {
    font-size: var(--text-base);
    line-height: 1.6;
    color: #4b5563;
  }

  .section-list li::marker {
    color: var(--color-accent, #2563eb);
    font-weight: 600;
  }

  .duration-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    border: 1px solid #bfdbfe;
    border-radius: 0.75rem;
    color: var(--color-accent, #2563eb);
    font-weight: 700;
    font-size: var(--text-sm);
    margin: 0;
  }

  .duration-badge::before {
    content: '‚è±Ô∏è';
    font-size: var(--text-xl);
  }

  .modal-footer {
    padding: 1.5rem 2rem;
    border-top: 1px solid #e5e7eb;
    background: #f9fafb;
    flex-shrink: 0;
  }

  .modal-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    justify-content: center;
    padding: 1rem 2rem;
    background: var(--color-primary, #001b48);
    color: white;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: var(--text-base);
    text-decoration: none;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px -1px rgba(0, 27, 72, 0.1);
  }

  .modal-cta:hover {
    background: var(--color-accent, #2563eb);
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.3);
  }

  .modal-cta svg {
    transition: transform 0.3s ease;
  }

  .modal-cta:hover svg {
    transform: translateX(4px);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .service-modal {
      max-width: 100vw;
      width: 100vw;
      max-height: 100vh;
      height: 100vh;
      border-radius: 0;
    }

    .modal-header,
    .modal-body,
    .modal-footer {
      padding: 1.5rem;
    }

    .modal-title {
      font-size: var(--text-xl);
    }

    .modal-icon {
      font-size: var(--text-3xl);
    }
  }
</style>

<script>
  // Modal functionality
  const modal = document.getElementById('service-modal') as HTMLDialogElement;
  const closeBtn = document.getElementById('modal-close');

  // Close modal on button click
  closeBtn?.addEventListener('click', () => {
    modal?.close();
  });

  // Close modal on backdrop click
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.close();
    }
  });

  // Close modal on ESC key (native behavior, but we can add custom handling if needed)
  modal?.addEventListener('cancel', (e) => {
    // Allow native ESC behavior
  });

  // Prevent body scroll when modal is open
  modal?.addEventListener('open', () => {
    document.body.style.overflow = 'hidden';
  });

  modal?.addEventListener('close', () => {
    document.body.style.overflow = '';
  });

  // Function to populate and show modal (will be called from the page)
  function showServiceModal(service: any) {
    const iconEl = document.getElementById('modal-icon');
    const titleEl = document.getElementById('modal-title');
    const descriptionEl = document.getElementById('modal-description');
    const detailedDescriptionEl = document.getElementById('modal-detailed-description');
    const requirementsEl = document.getElementById('modal-requirements');
    const processEl = document.getElementById('modal-process');
    const durationEl = document.getElementById('modal-duration');
    
    const detailedSection = document.getElementById('detailed-section');
    const requirementsSection = document.getElementById('requirements-section');
    const processSection = document.getElementById('process-section');
    const durationSection = document.getElementById('duration-section');

    if (iconEl) iconEl.textContent = service.icon || 'üìã';
    if (titleEl) titleEl.textContent = service.title || '';
    if (descriptionEl) descriptionEl.textContent = service.description || '';

    // Detailed description
    if (service.detailedDescription && detailedDescriptionEl && detailedSection) {
      detailedDescriptionEl.textContent = service.detailedDescription;
      detailedSection.style.display = 'block';
    } else if (detailedSection) {
      detailedSection.style.display = 'none';
    }

    // Requirements
    if (service.requirements && service.requirements.length > 0 && requirementsEl && requirementsSection) {
      requirementsEl.innerHTML = service.requirements
        .map((req: string) => `<li>${req}</li>`)
        .join('');
      requirementsSection.style.display = 'block';
    } else if (requirementsSection) {
      requirementsSection.style.display = 'none';
    }

    // Process
    if (service.process && service.process.length > 0 && processEl && processSection) {
      processEl.innerHTML = service.process
        .map((step: string) => `<li>${step}</li>`)
        .join('');
      processSection.style.display = 'block';
    } else if (processSection) {
      processSection.style.display = 'none';
    }

    // Duration
    if (service.duration && durationEl && durationSection) {
      durationEl.textContent = service.duration;
      durationSection.style.display = 'block';
    } else if (durationSection) {
      durationSection.style.display = 'none';
    }

    modal?.showModal();
  }

  // Make function globally available
  (window as any).showServiceModal = showServiceModal;
</script>
