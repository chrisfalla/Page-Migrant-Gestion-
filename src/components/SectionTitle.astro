---
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center' | 'right';
  class?: string;
}

const { 
  title, 
  subtitle, 
  align = 'center',
  class: className = ''
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};
---

<div class={`space-y-4 ${alignClasses[align]} ${className}`}>
  <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-[#000000] leading-tight">
    {title}
  </h2>
  {subtitle && (
    <p class="text-lg md:text-xl text-[#6e6e6e] max-w-3xl mx-auto">
      {subtitle}
    </p>
  )}
</div>
