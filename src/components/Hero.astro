---
import { Image } from "astro:assets";
import heroBgImage from "../assets/img/1.jpg";
---

<section id="hero" class="hero">
  <div class="hero__media" aria-hidden="true">
    <Image
      src={heroBgImage}
      alt=""
      class="hero__bg-image"
      loading="eager"
      decoding="async"
      fetchpriority="high"
      width={1920}
      height={1080}
      quality={75}
      format="webp"
    />
    <div class="hero__overlay"></div>
  </div>

  <div class="hero__content">
    <div class="hero__copy">
      <span class="hero__eyebrow">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
        Expertos en migración
      </span>
      
      <h1 class="hero__title">
        <span class="hero__title-line">Legaliza tu Camino,</span>
        <span class="hero__title-line hero__title-line--accent">Construye tu Futuro</span>
      </h1>
      
      <p class="hero__subtitle">
        Asesoría migratoria estratégica con <strong>acompañamiento personalizado</strong>. 
        Simplificamos cada trámite para que alcances tus metas sin complicaciones.
      </p>

      <div class="hero__stats">
        <div class="hero__stat">
          <div class="hero__stat-number">05+</div>
          <div class="hero__stat-label">Años de experiencia</div>
        </div>
        <div class="hero__stat">
          <div class="hero__stat-number">30+</div>
          <div class="hero__stat-label">Trámites migratorios</div>
        </div>
        <div class="hero__stat">
          <div class="hero__stat-number">100%</div>
          <div class="hero__stat-label">Compromiso profesional</div>
        </div>
      </div>

      <!-- Propuestas de valor rápidas -->
      <div class="hero__value-props">
        <div class="hero__value-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>Sin letra pequeña</span>
        </div>
        <div class="hero__value-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>Respuesta en 24h</span>
        </div>
        <div class="hero__value-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>100% transparente</span>
        </div>
      </div>

      <div class="hero__actions">
        <a href="#contacto" class="hero__button hero__button--primary">
          <span>Agenda tu consulta gratis</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="#servicios" class="hero__button hero__button--secondary">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polygon points="10 8 16 12 10 16 10 8"></polygon>
          </svg>
          Ver servicios
        </a>
      </div>

      <!-- Indicador de scroll -->
      <div class="hero__scroll-indicator">
        <span>Descubre más</span>
        <div class="hero__scroll-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 5v14M19 12l-7 7-7-7"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const media = document.querySelector(".hero__media") as HTMLElement | null;
  const image = media?.querySelector(".hero__bg-image") as HTMLElement | null;
  const overlay = media?.querySelector(".hero__overlay") as HTMLElement | null;
  const initialScale = 1.0;
  const finalScale = 1.4;

  let currentTranslateY = 0;
  let currentScale = initialScale;
  let currentOpacity = 1;
  let currentOverlayOpacity = 0.65;
  let targetTranslateY = 0;
  let targetScale = initialScale;
  let targetOpacity = 1;
  let targetOverlayOpacity = 0.65;

  const ease = (current: number, target: number, factor: number = 0.08): number => {
    return current + (target - current) * factor;
  };

  const calculateTargets = () => {
    const scrollY = window.scrollY || window.pageYOffset;
    targetTranslateY = scrollY * 0.28;
    
    const scaleProgress = Math.min(scrollY / (window.innerHeight * 0.8), 1);
    targetScale = initialScale + (scaleProgress * (finalScale - initialScale));

    const fadeDistance = Math.max(window.innerHeight * 1.1, 1);
    targetOpacity = Math.max(0, 1 - scrollY / fadeDistance);
    targetOverlayOpacity = Math.max(0.5, targetOpacity * 0.9);
  };

  const animate = () => {
    currentTranslateY = ease(currentTranslateY, targetTranslateY, 0.08);
    currentScale = ease(currentScale, targetScale, 0.08);
    currentOpacity = ease(currentOpacity, targetOpacity, 0.1);
    currentOverlayOpacity = ease(currentOverlayOpacity, targetOverlayOpacity, 0.1);

    if (
      Math.abs(currentTranslateY - targetTranslateY) > 0.01 ||
      Math.abs(currentOpacity - targetOpacity) > 0.001 ||
      Math.abs(currentScale - targetScale) > 0.001
    ) {
      if (image) {
        image.style.transform = `translate3d(0, ${currentTranslateY.toFixed(2)}px, 0) scale(${currentScale.toFixed(3)})`;
      }
      if (media) {
        media.style.opacity = currentOpacity.toFixed(3);
      }
      if (overlay) {
        overlay.style.opacity = currentOverlayOpacity.toFixed(3);
      }
    }

    requestAnimationFrame(animate);
  };

  const handleScroll = () => calculateTargets();

  calculateTargets();
  animate();

  window.addEventListener("scroll", handleScroll, { passive: true });
  window.addEventListener("resize", () => calculateTargets(), { passive: true });

  // Smooth scroll para el indicador
  const scrollIndicator = document.querySelector('.hero__scroll-indicator');
  scrollIndicator?.addEventListener('click', () => {
    const nextSection = document.querySelector('.hero')?.nextElementSibling;
    nextSection?.scrollIntoView({ behavior: 'smooth' });
  });
</script>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: grid;
    place-items: center;
    padding: clamp(var(--space-8), 5vw, var(--space-12)) var(--space-4);
    padding-top: var(--space-4);
    color: var(--color-white);
    background: var(--color-primary-dark);
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .hero {
      padding-inline: var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .hero {
      padding-inline: var(--space-8);
    }
  }

  .hero__media {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    will-change: opacity;
  }

  .hero__bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.05) contrast(1.05);
    will-change: transform;
    backface-visibility: hidden;
    transform-style: preserve-3d;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0, 12, 36, 0.7) 0%,
      rgba(0, 18, 47, 0.8) 50%,
      rgba(0, 18, 47, 0.88) 100%
    );
    will-change: opacity;
  }

  .hero__content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 900px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: var(--space-6);
  }

  .hero__copy {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-5);
  }

  .hero__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.9);
    width: fit-content;
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    line-height: 1.1;
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    text-wrap: balance;
    letter-spacing: -0.03em;
  }

  .hero__title-line {
    display: block;
  }

  .hero__title-line--accent {
    background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 50%, #bfdbfe 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero__subtitle {
    font-size: clamp(var(--text-lg), 2vw, var(--text-xl));
    line-height: var(--leading-relaxed);
    max-width: 600px;
    color: rgba(235, 242, 255, 0.8);
  }

  .hero__subtitle strong {
    color: var(--color-white);
    font-weight: var(--font-semibold);
  }

  /* ─── Propuestas de Valor ─── */
  .hero__value-props {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4) var(--space-6);
    padding: var(--space-4) 0;
  }

  .hero__value-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: rgba(255, 255, 255, 0.85);
  }

  .hero__value-item svg {
    color: var(--color-success);
    flex-shrink: 0;
  }

  .hero__stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-8);
    padding: var(--space-6) var(--space-8);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-2xl);
    backdrop-filter: blur(10px);
    margin-top: var(--space-2);
  }

  .hero__stat-divider {
    width: 1px;
    height: 50px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 50%,
      transparent 100%
    );
  }

  .hero__stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
    min-width: 100px;
  }

  .hero__stat-number {
    font-family: var(--font-display);
    font-size: clamp(var(--text-2xl), 2.5vw, var(--text-3xl));
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    line-height: var(--leading-none);
  }

  .hero__stat-label {
    font-size: var(--text-xs);
    color: rgba(235, 242, 255, 0.65);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: var(--font-medium);
    text-align: center;
    line-height: 1.4;
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4);
    margin-top: var(--space-4);
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    text-decoration: none;
    border-radius: var(--radius-xl);
    transition: all var(--transition-slower) var(--ease-in-out);
    white-space: nowrap;
  }

  .hero__button--primary {
    background: var(--color-white);
    color: var(--color-primary);
    box-shadow: 0 4px 14px rgba(255, 255, 255, 0.2);
  }

  .hero__button--primary:hover {
    background: var(--color-gray-50);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(255, 255, 255, 0.3);
  }

  .hero__button--secondary {
    background: transparent;
    color: var(--color-white);
    border: 2px solid rgba(255, 255, 255, 0.25);
  }

  .hero__button--secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.35);
    transform: translateY(-3px);
  }

  .hero__button--primary:hover svg {
    transform: translateX(4px);
  }

  .hero__button--primary svg {
    transition: transform var(--transition-slower) var(--ease-in-out);
  }

  /* ─── Indicador de Scroll ─── */
  .hero__scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-8);
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.6s cubic-bezier(0.4,0,0.2,1);
  }

  .hero__scroll-indicator:hover {
    opacity: 1;
  }

  .hero__scroll-indicator span {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.6);
  }

  .hero__scroll-arrow {
    animation: bounce 2s ease-in-out infinite;
  }

  .hero__scroll-arrow svg {
    width: 24px;
    height: 24px;
    color: rgba(255, 255, 255, 0.5);
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(8px); }
  }

  /* ─── Responsive Design ─── */
  @media (min-width: 768px) {
    .hero__stats {
      gap: var(--space-10);
      padding: var(--space-8) var(--space-12);
    }

    .hero__stat {
      min-width: 120px;
    }
  }

  /* Móvil pequeño */
  @media (max-width: 480px) {
    .hero {
      padding-top: var(--space-16);
      padding-bottom: var(--space-8);
    }

    .hero__title {
      font-size: 2.25rem;
    }

    .hero__stats {
      flex-direction: column;
      gap: var(--space-4);
      padding: var(--space-5);
      width: 100%;
    }

    .hero__stat-divider {
      width: 60%;
      height: 1px;
      background: linear-gradient(
        90deg,
        transparent 0%,
        rgba(255, 255, 255, 0.2) 50%,
        transparent 100%
      );
    }

    .hero__stat {
      flex-direction: row;
      gap: var(--space-3);
      min-width: auto;
    }

    .hero__stat-label {
      text-align: left;
    }

    .hero__actions {
      flex-direction: column;
      width: 100%;
    }

    .hero__button {
      width: 100%;
      justify-content: center;
    }

    .hero__value-props {
      flex-direction: column;
      gap: var(--space-3);
    }

    .hero__scroll-indicator {
      display: none;
    }
  }

  /* Tablets */
  @media (min-width: 481px) and (max-width: 767px) {
    .hero__stats {
      gap: var(--space-4);
      padding: var(--space-5) var(--space-6);
    }

    .hero__stat {
      min-width: 80px;
    }

    .hero__stat-number {
      font-size: var(--text-2xl);
    }
  }

  /* Reducir movimiento para accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .hero__scroll-arrow {
      animation: none;
    }
  }
</style>
