            stroke-width="2"
            d="M19 9l-7 7-7-7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  const media = document.querySelector(".hero__media") as HTMLElement | null;
  const image = media?.querySelector(".hero__image") as HTMLElement | null;
  const overlay = media?.querySelector(".hero__overlay") as HTMLElement | null;
  const initialScale = 1.3;
  const finalScale = 1.0;

  // Valores interpolados para suavizar la animación
  let currentTranslateY = 0;
  let currentScale = initialScale;
  let currentOpacity = 1;
  let currentOverlayOpacity = 0.65;
  let targetTranslateY = 0;
  let targetScale = initialScale;
  let targetOpacity = 1;
  let targetOverlayOpacity = 0.65;

  // Función de easing para suavizar interpolación
  const ease = (
    current: number,
    target: number,
    factor: number = 0.08,
  ): number => {
    return current + (target - current) * factor;
  };

  const calculateTargets = () => {
    const scrollY = window.scrollY || window.pageYOffset;
    targetTranslateY = scrollY * 0.28;
    
    // Zoom out effect: starts at initialScale and reduces to finalScale
    const scaleProgress = Math.min(scrollY / (window.innerHeight * 0.8), 1);
    targetScale = initialScale - (scaleProgress * (initialScale - finalScale));

    const fadeDistance = Math.max(window.innerHeight * 1.1, 1);
    targetOpacity = Math.max(0, 1 - scrollY / fadeDistance);
    targetOverlayOpacity = Math.max(0.5, targetOpacity * 0.9);
  };

  const animate = () => {
    // Interpolar valores para movimiento ultra suave
    currentTranslateY = ease(currentTranslateY, targetTranslateY, 0.08);
    currentScale = ease(currentScale, targetScale, 0.08);
    currentOpacity = ease(currentOpacity, targetOpacity, 0.1);
    currentOverlayOpacity = ease(
      currentOverlayOpacity,
      targetOverlayOpacity,
      0.1,
    );

    // Aplicar transformaciones solo si hay cambios significativos
    if (
      Math.abs(currentTranslateY - targetTranslateY) > 0.01 ||
      Math.abs(currentOpacity - targetOpacity) > 0.001 ||
      Math.abs(currentScale - targetScale) > 0.001
    ) {
      if (image) {
        image.style.transform = `translate3d(0, ${currentTranslateY.toFixed(2)}px, 0) scale(${currentScale.toFixed(3)})`;
      }
      if (media) {
        media.style.opacity = currentOpacity.toFixed(3);
      }
      if (overlay) {
        overlay.style.opacity = currentOverlayOpacity.toFixed(3);
      }
    }

    requestAnimationFrame(animate);
  };

  const handleScroll = () => {
    calculateTargets();
  };

  // Inicializar
  calculateTargets();
  animate();

  window.addEventListener("scroll", handleScroll, { passive: true });
  window.addEventListener(
    "resize",
    () => {
      calculateTargets();
    },
    { passive: true },
  );
</script>

<style>
  .hero {
    position: relative;
    min-height: 130vh;
    display: grid;
    place-items: center;
    padding: clamp(4rem, 6vw, 6rem) clamp(1.5rem, 5vw, 4rem);
    color: #f7f9fc;
    background: #0c1e3e;
    overflow: hidden;
  }

  .hero__media {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    will-change: opacity;
  }

  .hero__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.3);
    filter: saturate(1.05) contrast(1.05);
    will-change: transform;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transform-style: preserve-3d;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(9, 17, 33, 0.72) 0%,
      rgba(9, 17, 33, 0.82) 45%,
      rgba(9, 17, 33, 0.85) 100%
    );
    mix-blend-mode: multiply;
    will-change: opacity;
  }

  .hero__content {
    position: relative;
    z-index: 1;
    max-width: 760px;
    display: grid;
    gap: 1.25rem;
    text-align: left;
  }

  .hero__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.55rem 1.1rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 999px;
    font-size: 0.95rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: #d7e6ff;
    width: fit-content;
  }

  .hero__title {
    font-size: clamp(2.8rem, 4vw, 4.5rem);
    line-height: 1.05;
    font-weight: 800;
    color: #ffffff;
    text-wrap: balance;
  }

  .hero__subtitle {
    font-size: clamp(1.1rem, 1.5vw, 1.4rem);
    line-height: 1.6;
    max-width: 46ch;
    color: rgba(235, 242, 255, 0.92);
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2rem;
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: nowrap;
  }

  .hero__button--primary {
    background: #ffffff;
    color: #001b48;
    box-shadow: 0 4px 14px rgba(255, 255, 255, 0.25);
  }

  .hero__button--primary:hover {
    background: #f0f4ff;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 255, 255, 0.35);
  }

  .hero__button--secondary {
    background: transparent;
    color: #ffffff;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .hero__button--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
  }

  .hero__button-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4.5rem 1.5rem 3rem;
      align-items: end;
      text-align: left;
    }

    .hero__title {
      font-size: clamp(2.4rem, 7vw, 3.2rem);
    }

    .hero__subtitle {
      font-size: 1.05rem;
    }
  }
</style>
