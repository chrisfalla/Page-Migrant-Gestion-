---
import { Image } from "astro:assets";
import heroBgImage from "../assets/img/1.jpg";
import AlexImage from "../assets/img/Alex.png";
---

<section id="hero" class="hero">
  <div class="hero__media" aria-hidden="true">
    <Image
      src={heroBgImage}
      alt=""
      class="hero__bg-image"
      loading="eager"
      decoding="async"
      width={1280}
      quality={60}
    />
    <div class="hero__overlay"></div>
  </div>

  <div class="hero__content">
    <!-- Portrait para desktop (izquierda) -->
    <div class="hero__portrait hero__portrait--desktop" aria-label="Foto del asesor">
      <div class="hero__portrait-frame">
        <Image
          src={AlexImage}
          alt="Foto del asesor en traje formal"
          class="hero__portrait-image"
          loading="eager"
          decoding="async"
          widths={[320, 420, 520]}
          sizes="(max-width: 900px) 70vw, 380px"
        />
      </div>
    </div>

    <div class="hero__copy">
      <span class="hero__eyebrow">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
        Expertos en migración
      </span>
      
      <h1 class="hero__title">Legaliza tu camino y construye tu futuro</h1>
      
      <p class="hero__subtitle">
        Asesoría estratégica, ejecución ágil y acompañamiento cercano para que tu
        trámite avance sin tropiezos.
      </p>

      <div class="hero__stats">
        <div class="hero__stat">
          <div class="hero__stat-number">05+</div>
          <div class="hero__stat-label">Años de experiencia</div>
        </div>
        <div class="hero__stat">
          <div class="hero__stat-number">30+</div>
          <div class="hero__stat-label">Trámites migratorios</div>
        </div>
        <div class="hero__stat">
          <div class="hero__stat-number">100%</div>
          <div class="hero__stat-label">Compromiso profesional</div>
        </div>
      </div>

      <!-- Portrait para móvil (entre textos y botones) -->
      <div class="hero__portrait hero__portrait--mobile" aria-label="Foto del asesor">
        <div class="hero__portrait-frame">
          <Image
            src={AlexImage}
            alt="Foto del asesor en traje formal"
            class="hero__portrait-image"
            loading="eager"
            decoding="async"
            widths={[320, 420, 520]}
            sizes="(max-width: 900px) 70vw, 380px"
          />
        </div>
      </div>

      <div class="hero__actions">
        <a href="#contacto" class="hero__button hero__button--primary">
          Agenda tu consulta
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="#servicios" class="hero__button hero__button--secondary">
          Ver servicios
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  const media = document.querySelector(".hero__media") as HTMLElement | null;
  const image = media?.querySelector(".hero__bg-image") as HTMLElement | null;
  const overlay = media?.querySelector(".hero__overlay") as HTMLElement | null;
  const initialScale = 1.0;
  const finalScale = 1.4;

  let currentTranslateY = 0;
  let currentScale = initialScale;
  let currentOpacity = 1;
  let currentOverlayOpacity = 0.65;
  let targetTranslateY = 0;
  let targetScale = initialScale;
  let targetOpacity = 1;
  let targetOverlayOpacity = 0.65;

  const ease = (current: number, target: number, factor: number = 0.08): number => {
    return current + (target - current) * factor;
  };

  const calculateTargets = () => {
    const scrollY = window.scrollY || window.pageYOffset;
    targetTranslateY = scrollY * 0.28;
    
    const scaleProgress = Math.min(scrollY / (window.innerHeight * 0.8), 1);
    targetScale = initialScale + (scaleProgress * (finalScale - initialScale));

    const fadeDistance = Math.max(window.innerHeight * 1.1, 1);
    targetOpacity = Math.max(0, 1 - scrollY / fadeDistance);
    targetOverlayOpacity = Math.max(0.5, targetOpacity * 0.9);
  };

  const animate = () => {
    currentTranslateY = ease(currentTranslateY, targetTranslateY, 0.08);
    currentScale = ease(currentScale, targetScale, 0.08);
    currentOpacity = ease(currentOpacity, targetOpacity, 0.1);
    currentOverlayOpacity = ease(currentOverlayOpacity, targetOverlayOpacity, 0.1);

    if (
      Math.abs(currentTranslateY - targetTranslateY) > 0.01 ||
      Math.abs(currentOpacity - targetOpacity) > 0.001 ||
      Math.abs(currentScale - targetScale) > 0.001
    ) {
      if (image) {
        image.style.transform = `translate3d(0, ${currentTranslateY.toFixed(2)}px, 0) scale(${currentScale.toFixed(3)})`;
      }
      if (media) {
        media.style.opacity = currentOpacity.toFixed(3);
      }
      if (overlay) {
        overlay.style.opacity = currentOverlayOpacity.toFixed(3);
      }
    }

    requestAnimationFrame(animate);
  };

  const handleScroll = () => calculateTargets();

  calculateTargets();
  animate();

  window.addEventListener("scroll", handleScroll, { passive: true });
  window.addEventListener("resize", () => calculateTargets(), { passive: true });
</script>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: grid;
    place-items: center;
    padding: clamp(var(--space-8), 5vw, var(--space-12)) var(--space-4);
    padding-top: var(--space-4);
    color: var(--color-white);
    background: var(--color-primary-dark);
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .hero {
      padding-inline: var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .hero {
      padding-inline: var(--space-8);
    }
  }

  .hero__media {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    will-change: opacity;
  }

  .hero__bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.05) contrast(1.05);
    will-change: transform;
    backface-visibility: hidden;
    transform-style: preserve-3d;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0, 12, 36, 0.7) 0%,
      rgba(0, 18, 47, 0.8) 50%,
      rgba(0, 18, 47, 0.88) 100%
    );
    will-change: opacity;
  }

  .hero__content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: var(--container-xl);
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: var(--space-8);
  }

  @media (min-width: 900px) {
    .hero__content {
      grid-template-columns: 0.8fr 1.2fr;
      gap: var(--space-12);
    }
  }

  .hero__copy {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
    order: 1;
  }

  @media (min-width: 900px) {
    .hero__copy {
      order: 2;
    }
  }

  .hero__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.9);
    width: fit-content;
  }

  .hero__title {
    font-size: clamp(var(--text-4xl), 5vw, var(--text-6xl));
    line-height: var(--leading-none);
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    text-wrap: balance;
    letter-spacing: -0.02em;
  }

  .hero__subtitle {
    font-size: clamp(var(--text-lg), 1.8vw, var(--text-xl));
    line-height: var(--leading-relaxed);
    max-width: 48ch;
    color: rgba(235, 242, 255, 0.85);
  }

  .hero__portrait {
    display: grid;
    justify-items: center;
    align-items: center;
  }

  /* Portrait para desktop - visible solo en pantallas grandes */
  .hero__portrait--desktop {
    display: none;
  }

  @media (min-width: 900px) {
    .hero__portrait--desktop {
      display: grid;
      justify-items: start;
      align-items: center;
      order: 1;
      margin-top: 0;
    }
  }

  /* Portrait para móvil - visible solo en pantallas pequeñas */
  .hero__portrait--mobile {
    display: grid;
    justify-items: center;
    margin-top: var(--space-6);
    margin-bottom: var(--space-4);
  }

  @media (min-width: 900px) {
    .hero__portrait--mobile {
      display: none;
    }
  }

  .hero__portrait-frame {
    height: min(88vh, 780px);
    width: auto;
    max-width: min(620px, 96vw);
    aspect-ratio: 3 / 4;
    border-radius: var(--radius-3xl);
    overflow: visible;
    background: transparent;
    position: relative;
    margin-top: -2rem;
  }

  .hero__portrait-frame::before {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -20px;
    transform: translateX(-50%);
    width: 75%;
    height: 35%;
    background: radial-gradient(
      ellipse 60% 55% at 50% 50%,
      rgba(0, 0, 0, 0.55) 0%,
      rgba(0, 0, 0, 0.3) 35%,
      rgba(0, 0, 0, 0.12) 55%,
      transparent 80%
    );
    filter: blur(22px);
    pointer-events: none;
    z-index: 0;
  }

  .hero__portrait-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center center;
    position: relative;
    z-index: 1;
    /* Imagen un poco más oscura + sombras */
    filter:
      brightness(1)
      contrast(1)
      /* Sombra en la BASE de la foto - hacia abajo */
      drop-shadow(0px 25px 20px rgba(0, 0, 0, 0.5))
      drop-shadow(0px 15px 12px rgba(0, 0, 0, 0.35))
      drop-shadow(0px 8px 8px rgba(0, 0, 0, 0.25))
      /* Sombra sutil hacia arriba */
      drop-shadow(0px -8px 10px rgba(0, 0, 0, 0.2))
      drop-shadow(0px -4px 6px rgba(0, 0, 0, 0.12));
  }

  .hero__stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    margin-top: var(--space-2);
    padding-top: var(--space-6);
    border-top: 1px solid rgba(255, 255, 255, 0.12);
    max-width: 480px;
  }

  .hero__stat {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .hero__stat-number {
    font-family: var(--font-display);
    font-size: clamp(var(--text-2xl), 2.5vw, var(--text-3xl));
    font-weight: var(--font-extrabold);
    color: var(--color-white);
    line-height: var(--leading-none);
  }

  .hero__stat-label {
    font-size: var(--text-xs);
    color: rgba(235, 242, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: var(--font-medium);
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-top: 6px;
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    text-decoration: none;
    border-radius: var(--radius-xl);
    transition: all var(--transition-base) var(--ease-in-out);
    white-space: nowrap;
  }

  .hero__button--primary {
    background: var(--color-white);
    color: var(--color-primary);
    box-shadow: 0 4px 14px rgba(255, 255, 255, 0.2);
  }

  .hero__button--primary:hover {
    background: var(--color-gray-50);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(255, 255, 255, 0.3);
  }

  .hero__button--secondary {
    background: transparent;
    color: var(--color-white);
    border: 2px solid rgba(255, 255, 255, 0.25);
  }

  .hero__button--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
  }

  @media (max-width: 899px) {
    .hero {
      align-items: center;
      padding-bottom: var(--space-8);
    }

    .hero__content {
      text-align: center;
    }

    .hero__portrait-frame {
      height: min(45vh, 340px);
      max-width: min(260px, 65vw);
      margin-top: 0;
    }

    .hero__eyebrow {
      margin-inline: auto;
    }

    .hero__subtitle {
      margin-inline: auto;
    }

    .hero__stats {
      grid-template-columns: repeat(3, 1fr);
      max-width: 100%;
      margin-inline: auto;
    }

    .hero__actions {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero__stats {
      grid-template-columns: 1fr 1fr;
    }

    .hero__stat:last-child {
      grid-column: span 2;
      text-align: center;
    }
  }
</style>
