---
// Footer Premium con toda la información de contacto
interface Props {
  isLegalPage?: boolean;
}

const { isLegalPage = false } = Astro.props;
const baseUrl = isLegalPage ? '/' : '';
---

<footer id="contacto" class="footer reveal">
  <div class="footer__container">
    
    <!-- Grid Principal -->
    <div class="footer__grid">
      
      <!-- Columna 1: Marca y Descripción -->
      <div class="footer__brand">
        <div class="footer__brand-header">
          <h3 class="footer__brand-name">MIGRANT GESTIÓN</h3>
          <p class="footer__brand-legal">SAS</p>
        </div>
        
        <p class="footer__brand-desc">
          Consultoría especializada en gestión migratoria y trámites legales para extranjeros en Colombia. 
          <strong>Tu socio de confianza</strong> en procesos migratorios desde 2020.
        </p>
        
        <!-- Badge de experiencia -->
        <div class="footer__badge">
          <span class="footer__badge-dot"></span>
          <span class="footer__badge-text">5 años de experiencia</span>
        </div>
        
        <!-- Redes sociales --> 
        <div class="footer__social">
