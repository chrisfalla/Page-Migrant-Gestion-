<style>
  .footer {
    background: var(--color-black);
    color: var(--color-white);
    padding-top: var(--space-20);
    padding-bottom: var(--space-8);
  }

  .footer__container {
    max-width: var(--container-xl);
    margin-inline: auto;
    padding-inline: var(--space-4);
  }

  @media (min-width: 640px) {
    .footer__container { padding-inline: var(--space-6); }
  }
  @media (min-width: 1024px) {
    .footer__container { padding-inline: var(--space-8); }
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
    margin-bottom: var(--space-12);
  }

  /* Móvil: 2 columnas donde sea posible */
  @media (max-width: 767px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-8) var(--space-4);
    }

    .footer__brand {
      grid-column: 1 / -1;
      text-align: center;
      align-items: center;
      margin-bottom: var(--space-4);
    }

    .footer__brand-desc {
      max-width: 100%;
    }

    .footer__badge {
      margin-inline: auto;
    }

    .footer__social {
      justify-content: center;
    }

    /* Columnas de servicios y contacto */
    .footer__col {
      padding-top: var(--space-4);
      border-top: 1px solid rgba(255, 255, 255, 0.08);
    }

    .footer__col-title {
      font-size: var(--text-base);
      margin-bottom: var(--space-4);
      color: var(--color-white);
    }

    .footer__links {
      gap: var(--space-3);
    }

    .footer__link {
      font-size: var(--text-sm);
    }

    .footer__contact {
      gap: var(--space-3);
    }

    .footer__contact-item {
      gap: var(--space-2);
    }

    .footer__contact-item svg {
      width: 16px;
      height: 16px;
      margin-top: 3px;
    }

    .footer__contact-label {
      font-size: var(--text-xs);
    }

    .footer__contact-value {
      font-size: var(--text-sm);
    }
  }

  /* Tablet */
  @media (min-width: 768px) {
    .footer__grid {
      grid-template-columns: 1.5fr 1fr 1fr;
      gap: var(--space-8);
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: 2fr 1fr 1.2fr;
      gap: var(--space-12);
    }
  }

  .footer__brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .footer__brand-name {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    margin: 0;
  }

  .footer__brand-legal {
    font-size: var(--text-sm);
    color: var(--color-gray-400);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;
  }

  .footer__brand-desc {
    font-size: var(--text-base);
    color: var(--color-gray-300);
    line-height: var(--leading-relaxed);
    max-width: 380px;
    margin: 0;
  }

  .footer__brand-desc strong {
    color: var(--color-white);
  }

  .footer__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-full);
    border: 1px solid rgba(255, 255, 255, 0.1);
    width: fit-content;
  }

  .footer__badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-white);
    border-radius: var(--radius-full);
    animation: pulse-dot 2s infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .footer__badge-text {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-gray-400);
  }

  .footer__social {
    display: flex;
    gap: var(--space-3);
    padding-top: var(--space-2);
  }

  .footer__social-link {
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-lg);
    display: grid;
    place-items: center;
    transition: all var(--transition-base);
  }

  .footer__social-link svg {
    width: 20px;
    height: 20px;
    color: rgba(255, 255, 255, 0.7);
    transition: color var(--transition-fast);
  }

  .footer__social-link:hover svg {
    color: var(--color-white);
  }

  .footer__social-link--fb:hover { background: #1877F2; }
  .footer__social-link--ig:hover { background: linear-gradient(45deg, #833AB4, #FD1D1D, #F77737); }
  .footer__social-link--tt:hover { background: var(--color-gray-800); }
  .footer__social-link--wa { background: #25D366; }
  .footer__social-link--wa:hover { background: #128C7E; }
  .footer__social-link--wa svg { color: var(--color-white); }

  .footer__col-title {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-5);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer__link {
    font-size: var(--text-base);
    color: var(--color-gray-400);
    transition: color var(--transition-fast);
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .footer__link:hover {
    color: var(--color-white);
  }

  .footer__contact {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .footer__contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
  }

  .footer__contact-item svg {
    width: 20px;
    height: 20px;
    color: var(--color-gray-500);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .footer__contact-item > div {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .footer__contact-label {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  .footer__contact-value {
    font-size: var(--text-base);
    font-weight: var(--font-medium);
  }

  .footer__contact-value--link {
    transition: color var(--transition-fast);
  }

  .footer__contact-value--link:hover {
    color: var(--color-gray-400);
  }

  .footer__col-desc {
    font-size: var(--text-sm);
    color: var(--color-gray-400);
    margin-bottom: var(--space-5);
  }

  .footer__form {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer__input {
    width: 100%;
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    padding: var(--space-2) 0;
    font-size: var(--text-base);
    color: var(--color-white);
    outline: none;
    transition: border-color var(--transition-fast);
  }

  .footer__input::placeholder {
    color: var(--color-gray-500);
  }

  .footer__input:focus {
    border-color: var(--color-white);
  }

  .footer__form-btn {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-white);
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    cursor: pointer;
    transition: all var(--transition-fast);
    width: fit-content;
  }

  .footer__form-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .footer__divider {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: var(--space-6);
  }

  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: center;
    text-align: center;
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .footer__copyright {
    margin: 0;
  }

  .footer__copyright strong {
    color: var(--color-white);
  }

  .footer__legal {
    display: flex;
    gap: var(--space-6);
  }

  .footer__legal a {
    color: var(--color-white);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color var(--transition-fast);
  }

  .footer__legal a:hover {
    color: var(--color-white);
  }

  .footer__disclaimer {
    text-align: center;
    font-size: var(--text-xs);
    color: var(--color-gray-600);
    margin-top: var(--space-5);
  }

  /* WhatsApp FAB */
  .whatsapp-fab {
    position: fixed;
    bottom: var(--space-6);
    right: var(--space-6);
    width: 60px;
    height: 60px;
    background: #25D366;
    color: var(--color-white);
    border-radius: var(--radius-full);
    display: grid;
    place-items: center;
    box-shadow: var(--shadow-xl);
    z-index: var(--z-fixed);
    transition: all var(--transition-base);
    animation: pulse-fab 2.5s infinite;
  }

  .whatsapp-fab:hover {
    background: #128C7E;
    transform: scale(1.1);
  }

  .whatsapp-fab svg {
    width: 32px;
    height: 32px;
  }

  .whatsapp-fab__tooltip {
    position: absolute;
    right: calc(100% + var(--space-3));
    background: #25D366;
    color: var(--color-white);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-lg);
    white-space: nowrap;
