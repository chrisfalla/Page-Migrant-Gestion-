            <div>
              <span class="footer__contact-label">Ubicación</span>
              <span class="footer__contact-value">Neiva, Huila, Colombia</span>
            </div>
          </li>
        </ul>
      </div>
      
    </div>
    
    <!-- Separador -->
    <div class="footer__divider"></div>
    
    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <p class="footer__copyright">
        © {new Date().getFullYear()} <strong>MIGRANT GESTIÓN SAS</strong>. Todos los derechos reservados.
      </p>
      
      <nav class="footer__legal">
        <a href="/terminos">Términos y Condiciones</a>
        <a href="/privacidad">Política de Privacidad</a>
      </nav>
