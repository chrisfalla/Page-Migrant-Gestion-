---
const testimonials = [
  {
    name: 'Mariana Oviedo',
    role: 'Permiso Por Protección Temporal',
    quote: 'Me ayudaron a conseguir mi PPT en menos de 3 meses. El equipo fue muy profesional y me explicó cada paso sin complicaciones.'
  },
  {
    name: 'Carlos Rivas',
    role: 'Cédula de Extranjería',
    quote: 'Después de años viviendo en Colombia, finalmente tengo mi cédula. Fue un proceso rápido y sin estrés.'
  },
  {
    name: 'Daniela Sánchez',
    role: 'Visa de Trabajo (V)',
    quote: 'Conseguí mi visa de trabajo en tiempo récord. Su experiencia con migrantes venezolanos es invaluable.'
  }
];
---

<section id="testimonios" class="py-8 bg-[var(--color-primary)] text-white reveal">
  <div class="container mx-auto px-6">
    <div class="mb-12">
      <div>
        <p class="text-sm uppercase tracking-widest text-white/70">Prueba Social</p>
        <h2 class="text-4xl md:text-5xl font-bold text-white">Historias de confianza</h2>
      </div>
    </div>

    <div class="testimonials-grid">
      {testimonials.map((item) => (
        <article class="testimonial-card">
          <!-- Top decorative bar -->
          <div class="card-top-bar"></div>
          
          <!-- Stars rating -->
          <div class="stars-container mb-4">
            <svg class="star" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            <svg class="star" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            <svg class="star" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            <svg class="star" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            <svg class="star" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          </div>

          <p class="testimonial-text text-lg leading-relaxed mb-6 text-white/90">"{item.quote}"</p>
          
          <!-- Author info -->
          <div class="author-info">
            <!-- Avatar circle -->
            <div class="author-avatar">{item.name.charAt(0)}</div>
            <div class="flex-1">
              <div class="author-name text-white font-bold">{item.name}</div>
              <div class="author-role text-blue-300 text-sm font-medium">{item.role}</div>
            </div>
            <!-- Check mark -->
            <div class="verified-check">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
              </svg>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>

  <style>
    .testimonials-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 0.5rem 0;
    }

    @media (min-width: 640px) {
      .testimonials-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (min-width: 1024px) {
      .testimonials-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    .testimonial-card {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.02) 100%);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.15);
      border-radius: var(--radius-2xl);
      padding: var(--space-6);
      box-shadow: 
        0 12px 40px 0 rgba(0, 27, 72, 0.3),
        inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
      transition: all var(--transition-slower) var(--ease-in-out);
      position: relative;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      min-height: 300px;
    }

    .card-top-bar {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--color-accent-light) 0%, var(--color-accent) 50%, #1d4ed8 100%);
      transform: scaleX(0);
      transform-origin: left;
      transition: transform var(--transition-slower) var(--ease-in-out);
    }

    .testimonial-card:hover .card-top-bar {
      transform: scaleX(1);
    }

    .stars-container {
      display: flex;
      gap: 0.35rem;
    }

    .stars-container .star {
      width: 18px;
      height: 18px;
      color: #fbbf24;
      filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
      animation: starPop 0.6s cubic-bezier(0.4,0,0.2,1) forwards;
      opacity: 0;
    }

    .stars-container .star:nth-child(1) { animation-delay: 0.1s; }
    .stars-container .star:nth-child(2) { animation-delay: 0.2s; }
    .stars-container .star:nth-child(3) { animation-delay: 0.3s; }
    .stars-container .star:nth-child(4) { animation-delay: 0.4s; }
    .stars-container .star:nth-child(5) { animation-delay: 0.5s; }

    @keyframes starPop {
      0% {
        opacity: 0;
        transform: scale(0);
      }
      100% {
        opacity: 1;
        transform: scale(1);
      }
    }



    .testimonial-text {
      flex: 1;
      font-style: italic;
      font-weight: 500;
      color: rgba(255, 255, 255, 0.95);
      line-height: 1.75;
    }

    .author-info {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      margin-top: auto;
    }

    .author-avatar {
      width: 44px;
      height: 44px;
      border-radius: 50%;
      background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
      font-size: 18px;
      box-shadow: 0 4px 15px rgba(96, 165, 250, 0.3);
      flex-shrink: 0;
    }

    .author-name {
      font-size: 0.95rem;
      font-weight: 700;
      line-height: 1.3;
      color: #ffffff;
    }

    .author-role {
      font-size: 0.8rem;
      color: #93c5fd;
      font-weight: 500;
      margin-top: 0.25rem;
    }

    .verified-check {
      width: 24px;
      height: 24px;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .verified-check svg {
      width: 14px;
      height: 14px;
      color: white;
    }

    .testimonial-card:hover {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.12) 0%, rgba(255, 255, 255, 0.04) 100%);
      border-color: rgba(255, 255, 255, 0.25);
      box-shadow: 
        0 16px 50px 0 rgba(0, 27, 72, 0.4),
        inset 0 1px 0 0 rgba(255, 255, 255, 0.15);
      transform: translateY(-4px);
    }
  </style>
</section>
