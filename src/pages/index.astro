---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import TrustBar from "../components/TrustBar.astro";
import AboutSection from "../components/AboutSection.astro";
import WhyUsSection from "../components/WhyUsSection.astro";
import BentoServices from "../components/BentoServices.astro";
import ProofSection from "../components/ProofSection.astro";
import TestimonialCarousel from "../components/TestimonialCarousel.astro";
import ValuesSection from "../components/ValuesSection.astro";
import TeamSection from "../components/TeamSection.astro";
import ValueSection from "../components/ValueSection.astro";
import Footer from "../components/Footer.astro";
import { getImage } from "astro:assets";
import heroBgImage from "../assets/img/1.jpg";

const heroPreload = await getImage({
	src: heroBgImage,
	width: 720,
	height: 405,
	quality: 28,
	format: "webp",
	widths: [480, 640, 768, 960, 1280, 1440],
});
---

<Layout
	title="MIGRANT GESTIÓN SAS | Asesoría Migratoria en Colombia - Visas, PPT y más"
	description="Consultoría especializada en gestión migratoria en Colombia. Visas, PPT, SIRE, apostillas, convalidación de títulos y más de 30 trámites. 05 años de experiencia desde Neiva, Huila."
>
	<Fragment slot="head">
		<link
			rel="preload"
			as="image"
			href={heroPreload.src}
			imagesrcset={heroPreload.srcSet.attribute}
			imagesizes="100vw"
			type="image/webp"
			fetchpriority="high"
		/>
	</Fragment>
	<!-- Header y Hero -->
	<Header />
	<Hero />

	<!-- Credibilidad inmediata -->
	<TrustBar />

	<!-- Servicios - Lo que más busca el usuario -->
	<div class="cv-auto">
		<BentoServices />
	</div>

	<!-- Por qué elegirnos -->
	<div class="cv-auto">
		<WhyUsSection />
	</div>

	<!-- Prueba social: Casos de éxito -->
	<div class="cv-auto">
		<ProofSection />
	</div>

	<!-- Prueba social: Testimonios -->
	<div class="cv-auto">
		<TestimonialCarousel />
	</div>

	<!-- Quiénes somos -->
	<div class="cv-auto">
		<AboutSection />
	</div>

	<!-- Conoce al equipo -->
	<div class="cv-auto">
		<TeamSection />
	</div>

	<!-- Nuestros valores -->
	<div class="cv-auto">
		<ValuesSection />
	</div>

	<!-- Propuesta de valor -->
	<div class="cv-auto">
		<ValueSection />
	</div>

	<!-- Footer con Contacto -->
	<div class="cv-auto">
		<Footer />
	</div>
</Layout>
