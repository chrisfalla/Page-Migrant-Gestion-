{
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        { "type": "host", "value": "migrant-gestion.vercel.app" }
      ],
      "destination": "https://migrantgestion.com/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        { "type": "host", "value": "www.migrantgestion.com" }
      ],
      "destination": "https://migrantgestion.com/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/_assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Vary", "value": "Accept-Encoding" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" },
        { "key": "Vary", "value": "Accept-Encoding" }
      ]
    }
  ]
}
